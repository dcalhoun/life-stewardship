{
  "$schema": "https://json.schemastore.org/theme-v1.json",
  "version": 1,
  "customTemplates": [
    {
      "name": "blank",
      "postTypes": ["page", "post"],
      "title": "Blank"
    },
    {
      "name": "header-footer-only",
      "postTypes": ["page", "post"],
      "title": "Header & Footer Only"
    }
  ],
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ],
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "foreground",
          "color": "rgba(28,25,23,1)",
          "name": "Foreground"
        },
        {
          "slug": "background",
          "color": "rgba(245,245,244,1)",
          "name": "Background"
        },
        {
          "slug": "primary",
          "color": "rgba(4,120,87,1)",
          "name": "Primary"
        }
      ]
    },
    "custom": {
      "body": {
        "typography": {
          "lineHeight": 1.75
        }
      }
    },
    "layout": {
      "contentSize": "840px",
      "wideSize": "1100px"
    },
    "typography": {
      "customFontSize": false,
      "fontFamilies": [
        {
          "fontFamily": "ui-serif, Georgia, Cambria, Times New Roman, Times, serif",
          "slug": "body-font",
          "name": "Body (System Font)"
        },
        {
          "fontFamily": "ui-serif, Georgia, Cambria, Times New Roman, Times, serif",
          "slug": "heading-font",
          "name": "Headings (System Font)"
        },
        {
          "fontFamily": "ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Helvetica Neue, Arial, Noto Sans, sans-serif, Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol, Noto Color Emoji",
          "slug": "alternate",
          "name": "Alternate (System Font)"
        }
      ],
      "fontSizes": [
        {
          "name": "Extra Small",
          "size": "12px",
          "slug": "x-small"
        },
        {
          "name": "Small",
          "size": "16px",
          "slug": "small"
        },
        {
          "name": "Base",
          "size": "20px",
          "slug": "base"
        },
        {
          "name": "Medium",
          "size": "24px",
          "slug": "medium"
        },
        {
          "name": "Large",
          "size": "28px",
          "slug": "large"
        },
        {
          "name": "Extra Large",
          "size": "32px",
          "slug": "x-large"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--foreground)"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--base)"
        }
      }
    },
    "typography": {
      "lineHeight": "var(--wp--custom--body--typography--line-height)",
      "fontFamily": "var(--wp--preset--font-family--body-font)",
      "fontSize": "var(--wp--preset--font-size--base)"
    }
  }
}
