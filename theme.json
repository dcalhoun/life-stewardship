{
  "$schema": "https://json.schemastore.org/theme-v1.json",
  "version": 1,
  "customTemplates": [
    {
      "name": "blank",
      "postTypes": ["page", "post"],
      "title": "Blank"
    },
    {
      "name": "header-footer-only",
      "postTypes": ["page", "post"],
      "title": "Header & Footer Only"
    }
  ],
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ],
  "settings": {
    "blocks": {
      "core/group": {
        "border": {
          "customRadius": true
        }
      },
      "core/heading": {
        "typography": { "customLineHeight": true }
      }
    },
    "color": {
      "palette": [
        {
          "slug": "foreground",
          "color": "rgba(28,25,23,1)",
          "name": "Foreground (Primary)"
        },
        {
          "slug": "foreground-secondary",
          "color": "rgba(120,113,108,1)",
          "name": "Foreground (Secondary)"
        },
        {
          "slug": "background",
          "color": "rgba(245,245,244,1)",
          "name": "Background (Primary)"
        },
        {
          "slug": "background-secondary",
          "color": "rgb(255, 255, 255)",
          "name": "Background (Secondary)"
        },
        {
          "slug": "primary",
          "color": "rgba(4,120,87,1)",
          "name": "Action (Primary)"
        },
        {
          "slug": "secondary",
          "color": "rgb(68, 64, 60)",
          "name": "Action (Secondary)"
        }
      ]
    },
    "custom": {
      "body": {
        "typography": {
          "lineHeight": 1.75
        }
      },
      "component": {
        "drop-shadow": "0 0 #0000,0 0 #0000,0 4px 6px -1px rgba(0,0,0,0.1),0 2px 4px -1px rgba(0,0,0,0.06)"
      },
      "image": {
        "rounded": "0.5rem"
      }
    },
    "layout": {
      "contentSize": "840px",
      "wideSize": "1100px"
    },
    "spacing": {
      "blockGap": true,
      "customMargin": true,
      "customPadding": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "typography": {
      "customFontSize": false,
      "fontFamilies": [
        {
          "fontFamily": "ui-serif, Georgia, Cambria, Times New Roman, Times, serif",
          "slug": "body-font",
          "name": "Body (System Font)"
        },
        {
          "fontFamily": "ui-serif, Georgia, Cambria, Times New Roman, Times, serif",
          "slug": "heading-font",
          "name": "Headings (System Font)"
        },
        {
          "fontFamily": "ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Helvetica Neue, Arial, Noto Sans, sans-serif, Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol, Noto Color Emoji",
          "slug": "alternate",
          "name": "Alternate (System Font)"
        }
      ],
      "fontSizes": [
        {
          "name": "Extra Small",
          "size": "0.75rem",
          "slug": "x-small"
        },
        {
          "name": "Small",
          "size": "1rem",
          "slug": "small"
        },
        {
          "name": "Base",
          "size": "1.25rem",
          "slug": "base"
        },
        {
          "name": "Medium",
          "size": "1.5rem",
          "slug": "medium"
        },
        {
          "name": "Large",
          "size": "2.25rem",
          "slug": "large"
        },
        {
          "name": "Extra Large",
          "size": "3.75rem",
          "slug": "x-large"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--foreground)"
    },
    "blocks": {
      "core/navigation-link": {
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--alternate)",
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "600",
          "letterSpacing": "0.05em"
        }
      },
      "core/post-title": {
        "spacing": { "margin": { "bottom": "0" } }
      }
    },
    "elements": {
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      }
    },
    "spacing": {
      "blockGap": "1.5rem"
    },
    "typography": {
      "lineHeight": "var(--wp--custom--body--typography--line-height)",
      "fontFamily": "var(--wp--preset--font-family--body-font)",
      "fontSize": "var(--wp--preset--font-size--base)"
    }
  }
}
